{
    "plugins": [],
    "extends": ["google"],
    "rules": {
        "indent": ["error", 4],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "quotes": ["error", "double"],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "require-jsdoc": 0,
        "key-spacing": [
            "error",
            {
                "multiLine": {
                    "beforeColon": true,
                    "afterColon":true
                },
                "align": {
                    "beforeColon": true,
                    "afterColon": true,
                    "on": "colon"
                }
            }
        ],
        "no-multi-spaces": [
            "error",
            {
                "exceptions": {
                    "VariableDeclarator": true,
                    "AssignmentExpression": true,
                    "JSXAttribute": true,
                    "ImportDeclaration": true
                }
            }
        ],
        "one-var" : ["error", "consecutive"]
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es2022": true
    },
    "globals": {
        "arguments": true
    },
    "overrides": []
}
